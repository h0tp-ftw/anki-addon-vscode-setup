{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Anki",
      "type": "debugpy",
      "request": "launch",
      "stopOnEntry": false,
      "program": "$PROGRAM_PATH$",          // <- will be replaced with full path to venv's Anki executable
      "cwd": "${workspaceRoot}",
      "env": {},
      "args": [
        "-b",
        "$DATA_DIR$"                        // <- will be replaced with full path to Anki data directory
      ],
      "envFile": "${workspaceRoot}/.env"
    }
  ]
}
